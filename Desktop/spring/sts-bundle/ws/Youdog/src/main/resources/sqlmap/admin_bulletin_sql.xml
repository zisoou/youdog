<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="adminBulletin">


	<insert id="bulletinWrite" parameterType="map">
		insert into youdog_bulletin(
		bulletin_cate,
		bulletin_title,
		bulletin_content,
		bulletin_writer,
		bulletin_writer_no,
		bulletin_reg_date
		)
		values(
		'공지',
		#{bulletin_title},
		#{bulletin_content},
		#{bulletin_writer},
		#{bulletin_writer_no},
		now()
		)
	</insert>

	<select id="listupAllBulletin" resultType="map">
		select * from
		youdog_bulletin;
	</select>

	<select id="detailBulletin" resultType="BulletinVo"
		parameterType="int">
		select * from
		youdog_bulletin
		where
		bulletin_no = #{b_no}
	</select>


	<update id="increaseVeiws" parameterType="int">
		update
		youdog_bulletin
		set
		bulletin_views = bulletin_views + 1
		where bulletin_no = #{b_no}
	</update>



	<update id="modifyBulletinConfirm" parameterType="map">
		update
		youdog_bulletin
		set
		bulletin_title = #{bulletin_title},
		bulletin_content
		=#{bulletin_content},
		bulletin_mod_date = now()
		where bulletin_no =
		#{bulletin_no}
	</update>

	<delete id="deleteBulletin" parameterType="int">
		DELETE
		FROM youdog_bulletin
		WHERE bulletin_no = #{b_no};
	</delete>
	
	
